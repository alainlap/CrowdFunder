<div class="large-2 columns">
	<%= image_tag(transaction.project.img, class: "th") %>
</div>

<div class="large-4 columns">
	<h4><%= link_to transaction.project.name, project_path(transaction.project) %></h4>
	<h5 class="subheader"><em><%= transaction.project.summary %></em></h5>
	<p><strong>You contributed $<%= transaction.dollar_amount %>.00 on <%= transaction.created_at.strftime("%d-%m-%Y") %></strong></p>
	<% if transaction.tier.present? %>
		<p><strong>Your reward: </strong> <%= transaction.tier.reward_text %></p>
	<% end %>
	<p><small><%= mail_to transaction.project.creator.email, "Contact the project owner" %></small></p>

</div>