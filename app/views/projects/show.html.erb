<h1><%= @project.name %> <small class="subheader">by <%= @project.creator.username %></h1>

<div class="large-9 columns">

  <div class="leftcoltop leftcol">
    <div class="headerimg" style="background-image:url(<%= @project.img %>)"></div>
    <div class="goals">
      <h3 class="center round progress100"><%= @project.percentage_raised %>% of $<%= @project.goal.to_s %></h3>
      <div class="progress round">
        <span class="meter" style="width: <%= @project.percentage_raised %>%"></span>
      </div>
      <h3 class="subheader center"><small>$<%= @project.sum_raised %> from <%= @project.number_of_backers %> backers</small></h3>
      <a href="#" class="button large alert contbutton">Contribute</a>
    </div>
  </div>

  <div class="leftcolmid leftcol">
    <h3>Description</h3>
    <p class="text-justify"><%= @project.description %></p>
  </div>

  <div class="leftcolbottom leftcol">
    <h3>Project Founder</h3>
    <p><%= @project.creator %></p>
  </div>

</div>


<div class="large-3 columns" id="rightcol">
  <ul>
    <% @project.tiers.each do |tier| %>
    <li class="tiercard">
      <div class="tiernumber">
        <%= image_tag "star.png", class: "starimg" %>
        <h4 class="inline threshold nopad">$<%= tier.threshold.to_s %></h4>
      </div>
      <h5 class="remaining">X remaining</h5>
      <p class="tiertext"><%= tier.reward_text %></p>
    </lu>
    <% end %>
  </ul>
</div>
















